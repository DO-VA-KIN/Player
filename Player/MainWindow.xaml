<Window x:Class="Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Player"
        mc:Ignorable="d"
        Title="" Height="400" Width="800" ResizeMode="CanMinimize" Loaded="Window_Loaded" Closing="Window_Closing" >
    <Grid>
        <Menu Grid.Row="0" Background="AliceBlue">
            <MenuItem Header="Файл">
                <MenuItem x:Name="Menu_Close" Header="Закрыть"/>
            </MenuItem>
            <MenuItem x:Name="Menu_Settings" Header="Настройка"/>
        </Menu>

        <Label x:Name="LabelMusic" Content="music not found" HorizontalAlignment="Left" FlowDirection="LeftToRight" Margin="0,330,0,0" VerticalAlignment="Stretch" Width="794" FontSize="18" FontFamily="Times New Roman"/>
        <Button x:Name="ButtonMusicPlay" Content="" ToolTip="Запуск/остановка проигрывателя" HorizontalAlignment="Left" Margin="333,281,0,0" VerticalAlignment="Top" Width="41" Height="37" Cursor="Hand" Click="ButtonMusicPlay_Click" Visibility="Visible">
            <Button.OpacityMask>
                <ImageBrush ImageSource="Images/musicPlay.png"/>
            </Button.OpacityMask>
            <Button.Background>
                <ImageBrush ImageSource="Images/musicPlay.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="ButtonMusicNext" Content="" ToolTip="Следующий трек" HorizontalAlignment="Left" Margin="389,281,0,0" VerticalAlignment="Top" Width="40" Height="37" Cursor="Hand" Click="MediaPlayer_MediaEnded" Visibility="Visible">
            <Button.OpacityMask>
                <ImageBrush ImageSource="Images/next.png"/>
            </Button.OpacityMask>
            <Button.Background>
                <ImageBrush ImageSource="Images/next.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="ButtonNewPlaylist" Content="Новый плейлист" ToolTip="Поиск музыки в файлах" Background="LightBlue"  Margin="10,281,614,46" FontSize="14" Click="ButtonNewPlaylist_Click"/>

        <ComboBox x:Name="ComboBoxPlaylists" Margin="10,45,534,291" SelectionChanged="ComboBoxPlaylists_SelectionChanged"/>
        <ComboBox x:Name="ComboBoxTracks" Margin="524,45,20,291" SelectionChanged="ComboBoxTracks_SelectionChanged"/>
    </Grid>
</Window>
